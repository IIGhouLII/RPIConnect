<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.rpi.ghoul.rpiconnect.MusicController">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TableRow
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:weightSum="3" >
            <Button
                android:id="@+id/prev"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableTop="@android:drawable/ic_media_previous"
                android:layout_weight="1"
                android:text="Prev"
                android:onClick="Previous"/>

            <Button
                android:id="@+id/play_pause"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableTop="@android:drawable/ic_media_play"
                android:layout_weight="1"
                android:text="Play"
                android:onClick="Play_Pause"/>


            <Button
                android:id="@+id/next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableTop="@android:drawable/ic_media_next"
                android:layout_weight="1"
                android:text="Next"
                android:onClick="Next"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:weightSum="4" >
            <Button
                android:id="@+id/vol_up"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableTop="@android:drawable/ic_lock_silent_mode_off"
                android:layout_weight="1"
                android:onClick="Vol_Up"
                android:text="Vol +"/>

            <Button
                android:id="@+id/vol_dn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableTop="@android:drawable/ic_lock_silent_mode"
                android:layout_weight="1"
                android:onClick="Vol_Down"
                android:text="Vol -" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:weightSum="6" >
            <Button
                android:id="@+id/files"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Files"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/radio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Radio"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Details"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
